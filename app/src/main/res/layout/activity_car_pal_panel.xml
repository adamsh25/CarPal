<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context=".CarPalPanel"
    android:id="@+id/activity_car_pal_panel"
    android:background="@android:color/white"
    android:clickable="false">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="96dp"
        android:id="@+id/Footer"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/Drivers">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOME"
            android:id="@+id/textView4"
            android:textColor="#ff00897b"
            android:textSize="42.5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18:00"
            android:id="@+id/textView5"
            android:textColor="#ff00897b"
            android:textSize="42.5dp"
            android:layout_toRightOf="@+id/textView4"
            android:layout_marginLeft="90dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView5"
            android:src="@drawable/caricon"
            android:layout_alignBottom="@+id/textView5"
            android:layout_toRightOf="@+id/textView4"
            android:layout_marginLeft="30dp" />

    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:src="@drawable/divider9"
        android:layout_above="@+id/Drivers"
        android:layout_alignParentLeft="true" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="327.5dp"
        android:layout_height="150dp"
        android:id="@+id/Drivers"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:layout_below="@+id/Footer"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="65.5dp"
            android:layout_height="fill_parent"
            android:id="@+id/sunday"
            android:layout_alignTop="@+id/monday"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="24.1"
                android:id="@+id/textView6"
                android:textSize="14dp"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_centerHorizontal="true" />

            <com.pkmmte.view.CircularImageView
                android:id="@+id/imageViewDriverPic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:src="@drawable/beeri"
                app:border="true"
                app:border_color="@android:color/darker_gray"
                app:border_width="0.1dp"
                app:selector="true"
                app:selector_color="#4403a9f4"
                app:selector_stroke_color="#ff00897b"
                app:selector_stroke_width="2dp"
                app:shadow="true"
                android:layout_below="@+id/textView9"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="JOHN"
                android:id="@+id/textviewDriverName"
                android:layout_gravity="center_vertical"
                android:textSize="14dp"
                android:textAlignment="center"
                android:layout_alignWithParentIfMissing="false"
                android:textColor="#ff918c7d"
                android:layout_below="@+id/imageViewDriverPic"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="S"
                android:textColor="#ff000000"
                android:id="@+id/textView9"
                android:textSize="14dp"
                android:textAlignment="center"
                android:layout_below="@+id/textView6"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp" />

        </RelativeLayout>

        <RelativeLayout
        android:layout_width="65.5dp"
        android:layout_height="fill_parent"
        android:id="@+id/monday"
        android:layout_toRightOf="@+id/sunday"
        android:gravity="center"
        android:layout_centerHorizontal="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="24.1"
                android:id="@+id/textView6"
                android:textSize="14dp"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_centerHorizontal="true" />

            <com.pkmmte.view.CircularImageView
                android:id="@+id/imageViewDriverPic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:src="@drawable/beeri"
                app:border="true"
                app:border_color="@android:color/darker_gray"
                app:border_width="0.1dp"
                app:selector="true"
                app:selector_color="#4403a9f4"
                app:selector_stroke_color="#ff00897b"
                app:selector_stroke_width="2dp"
                app:shadow="true"
                android:layout_below="@+id/textView9"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="JOHN"
                android:id="@+id/textviewDriverName"
                android:layout_gravity="center_vertical"
                android:textSize="14dp"
                android:textAlignment="center"
                android:layout_alignWithParentIfMissing="false"
                android:textColor="#ff918c7d"
                android:layout_below="@+id/imageViewDriverPic"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="M"
                android:textColor="#ff000000"
                android:id="@+id/textView9"
                android:textSize="14dp"
                android:textAlignment="center"
                android:layout_below="@+id/textView6"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="65.5dp"
            android:layout_height="fill_parent"
            android:id="@+id/tuesday"
            android:layout_toRightOf="@+id/monday"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="24.1"
                android:id="@+id/textView6"
                android:textSize="14dp"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_centerHorizontal="true" />

            <com.pkmmte.view.CircularImageView
                android:id="@+id/imageViewDriverPic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:src="@drawable/beeri"
                app:border="true"
                app:border_color="@android:color/darker_gray"
                app:border_width="0.1dp"
                app:selector="true"
                app:selector_color="#4403a9f4"
                app:selector_stroke_color="#ff00897b"
                app:selector_stroke_width="2dp"
                app:shadow="true"
                android:layout_below="@+id/textView9"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="JOHN"
                android:id="@+id/textviewDriverName"
                android:layout_gravity="center_vertical"
                android:textSize="14dp"
                android:textAlignment="center"
                android:layout_alignWithParentIfMissing="false"
                android:textColor="#ff918c7d"
                android:layout_below="@+id/imageViewDriverPic"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="T"
                android:textColor="#ff000000"
                android:id="@+id/textView9"
                android:textSize="14dp"
                android:textAlignment="center"
                android:layout_below="@+id/textView6"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="65.5dp"
            android:layout_height="fill_parent"
            android:id="@+id/wednesday"
            android:layout_toRightOf="@+id/tuesday"
            android:gravity="center"
            android:background="#ebecf7">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="27.1"
                android:id="@+id/textView6"
                android:textSize="14dp"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_centerHorizontal="true" />

            <com.pkmmte.view.CircularImageView
                android:id="@+id/imageViewDriverPic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:src="@drawable/beeri"
                app:border="true"
                app:border_color="@android:color/darker_gray"
                app:border_width="0.1dp"
                app:selector="true"
                app:selector_color="#4403a9f4"
                app:selector_stroke_color="#ff00897b"
                app:selector_stroke_width="2dp"
                app:shadow="true"
                android:layout_below="@+id/textView9"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="DANI"
                android:id="@+id/textviewDriverName"
                android:layout_gravity="center_vertical"
                android:textSize="14dp"
                android:textAlignment="center"
                android:layout_alignWithParentIfMissing="false"
                android:textColor="#ff918c7d"
                android:layout_below="@+id/imageViewDriverPic"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="W"
                android:id="@+id/textView9"
                android:textSize="14dp"
                android:textColor="#ff000000"
                android:textAlignment="center"
                android:layout_below="@+id/textView6"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="65.5dp"
            android:layout_height="fill_parent"
            android:id="@+id/thursday"
            android:layout_toRightOf="@+id/wednesday"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="24.1"
                android:id="@+id/textView6"
                android:textSize="14dp"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_centerHorizontal="true" />

            <com.pkmmte.view.CircularImageView
                android:id="@+id/imageViewDriverPic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:src="@drawable/beeri"
                app:border="true"
                app:border_color="@android:color/darker_gray"
                app:border_width="0.1dp"
                app:selector="true"
                app:selector_color="#4403a9f4"
                app:selector_stroke_color="#ff00897b"
                app:selector_stroke_width="2dp"
                app:shadow="true"
                android:layout_below="@+id/textView9"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="JOHN"
                android:id="@+id/textviewDriverName"
                android:layout_gravity="center_vertical"
                android:textSize="14dp"
                android:textAlignment="center"
                android:layout_alignWithParentIfMissing="false"
                android:textColor="#ff918c7d"
                android:layout_below="@+id/imageViewDriverPic"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="TH"
                android:textColor="#ff000000"
                android:id="@+id/textView9"
                android:textSize="14dp"
                android:textAlignment="center"
                android:layout_below="@+id/textView6"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp" />

        </RelativeLayout>

    </RelativeLayout>

    <com.BooYa.CarPal.MyListView
        android:id="@+id/NoticiationList"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        tools:listitem="@layout/notification_item"
        android:divider="#ffbdb7a6"
        android:dividerHeight="0.5dp"
        android:gravity="center"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp">
    </com.BooYa.CarPal.MyListView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/divider9"
        android:layout_below="@+id/Drivers"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/Stats"
        android:layout_below="@+id/imageView4">

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="fill_parent"
            android:layout_height="130dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="false" />

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/indicator"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_alignParentBottom="true"
            app:fillColor="#ff00897b"
            android:layout_below="@+id/pager" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:gravity="center"
            android:id="@+id/linearLayout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="@drawable/favstat"
                android:paddingRight="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="STATS"
                android:id="@+id/textView7"
                android:layout_weight="0.88"
                android:textColor="#ffbdb7a6"
                android:textSize="14dp"
                android:gravity="center_vertical" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView8"
                android:onClick="shareStatOnClickHandler"
                android:src="@drawable/share"
                android:padding="5dp"
                android:longClickable="false"
                android:background="@android:color/transparent" />

        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@drawable/divider9"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/NoticiationList"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="THERE ARE NO NEW NOTIFICATIONS FOR YOU"
        android:id="@+id/textviewNoNotifications"
        android:layout_alignBottom="@+id/NoticiationList"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:layout_marginBottom="37dp"
        android:textColor="#ffbdb7a6"
        android:textSize="10dp"/>


</RelativeLayout>

    <!-- The navigation drawer -->
    <ListView
        android:id="@+id/navdrawer"
        android:layout_width="@dimen/navdrawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        android:choiceMode="singleChoice"
        android:divider="#c5cae9"
        android:dividerHeight="0dp"
        android:drawSelectorOnTop="false">
    </ListView>
</android.support.v4.widget.DrawerLayout>

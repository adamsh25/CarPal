<RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
              xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/relativeLayout"
              android:paddingBottom="5dp">
    <ImageButton android:id="@+id/btnCancel" android:layout_width="40dp" android:layout_height="40dp"
                     android:background="#FFFFFF" android:focusable="false" android:focusableInTouchMode="false"
                     android:text="Edit Data" android:textColor="#0099CC"
                     android:layout_alignParentTop="true" android:layout_toRightOf="@+id/btnAccept"
                     android:layout_marginLeft="5dp"/>
    <ImageButton android:id="@+id/btnAccept" android:layout_width="40dp" android:layout_height="40dp"
                     android:background="#FFFFFF" android:focusable="false" android:focusableInTouchMode="false"
                     android:text="Delete" android:textColor="#0099CC"
                     android:layout_alignParentTop="true" android:layout_alignParentLeft="true"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" android:layout_toRightOf="@+id/btnCancel" android:layout_marginLeft="5dp"
            android:background="@drawable/alerts1_01" android:layout_alignBottom="@+id/btnCancel"/>

</RelativeLayout>
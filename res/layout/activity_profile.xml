<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       tools:context=".LoginActivity" >

    <!-- Login progress -->

    <LinearLayout
            android:id="@+id/profile_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone" >

        <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />

        <TextView
                android:id="@+id/profile_status_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-light"
                android:text="@string/profile_status_message"
                android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <!-- Login form -->

    <ScrollView
            android:id="@+id/profile_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        <LinearLayout
                android:orientation="vertical" android:background="#A8D4E2" android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="השלם את הפרופיל שלך"
                    android:id="@+id/textView" android:layout_gravity="center_horizontal"/>
            <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
                <ImageView android:layout_width="100dp" android:layout_height="150dp"
                           android:id="@+id/imgPhoto" android:background="@drawable/adam"/>

                <include layout="@layout/textbox"
                         android:id="@+id/txtFirstName"
                         android:hint="שם פרטי"
                         android:layout_toRightOf="@id/imgPhoto"
                         android:layout_width="fill_parent"
                         android:layout_height="wrap_content"/>

                <EditText android:id="@+id/txtLastName" android:layout_width="fill_parent"
                          android:layout_height="wrap_content" android:hint="שם משפחה" android:imeActionId="@+id/login"
                          android:imeActionLabel="@string/action_sign_in_short" android:imeOptions="actionUnspecified"
                          android:maxLines="1" android:singleLine="true"
                          android:enabled="false"
                          android:layout_below="@+id/txtFirstName" android:layout_toRightOf="@id/imgPhoto"/>
                <EditText
                        android:id="@+id/txtEmail"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="מייל"
                        android:inputType="none"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:enabled="false" android:layout_below="@+id/txtLastName"
                        android:layout_toRightOf="@+id/imgPhoto"/>
                <EditText android:id="@+id/txtOrganization" android:layout_width="fill_parent"
                          android:layout_height="wrap_content" android:hint="ארגון"
                          android:inputType="none" android:maxLines="1" android:singleLine="true"
                          android:enabled="false"
                          android:layout_below="@+id/txtEmail" android:layout_toRightOf="@id/imgPhoto"/>
            </RelativeLayout>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:text="מקום מגורים" android:id="@+id/textView2"
                      android:layout_gravity="center_horizontal" android:paddingTop="20dp"/>
            <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
                <EditText
                        android:id="@+id/txtCity"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="עיר"
                        android:imeActionId="@+id/login"
                        android:imeActionLabel="@string/action_sign_in_short"
                        android:imeOptions="actionUnspecified"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:layout_alignParentTop="true" android:layout_toRightOf="@+id/btnCurrentLocation"
                        android:enabled="false" android:layout_alignParentEnd="false"
                        android:layout_alignParentStart="false"/>
                <EditText android:id="@+id/txtStreet" android:layout_width="fill_parent"
                          android:layout_height="wrap_content" android:hint="רחוב" android:imeActionId="@+id/login"
                          android:imeActionLabel="@string/action_sign_in_short" android:imeOptions="actionUnspecified"
                          android:maxLines="1" android:singleLine="true"
                          android:enabled="false"
                          android:layout_below="@+id/txtCity" android:layout_toRightOf="@+id/btnCurrentLocation"/>
                <EditText
                        android:id="@+id/txtHouseNumber"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="מייל"
                        android:inputType="none"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:enabled="false" android:layout_below="@id/txtStreet"
                        android:layout_toRightOf="@+id/btnCurrentLocation"/>
                <Button
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="Use current location"
                        android:id="@+id/btnCurrentLocation" android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"/>
            </RelativeLayout>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:text="ימים מועדפים" android:id="@+id/txtPreferred"
                      android:layout_gravity="center_horizontal" android:paddingTop="20dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_margin="10dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textAppearance="?android:attr/textAppearanceSmall"
                              android:text="שישי" android:id="@+id/textView7"
                              android:layout_gravity="center_horizontal"/>
                    <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/cbxPrefferedFriday"/>
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_margin="10dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textAppearance="?android:attr/textAppearanceSmall"
                              android:text="חמישי" android:id="@+id/textView6"
                              android:layout_gravity="center_horizontal"/>
                    <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/cbxPrefferedThursday"/>
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_margin="10dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textAppearance="?android:attr/textAppearanceSmall"
                              android:text="רביעי" android:id="@+id/textView5"
                              android:layout_gravity="center_horizontal"/>
                    <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/cbxPrefferedWednesday"/>
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_margin="10dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textAppearance="?android:attr/textAppearanceSmall"
                              android:text="שלישי" android:id="@+id/textView8"
                              android:layout_gravity="center_horizontal"/>
                    <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/cbxPrefferedTuesday"/>
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_margin="10dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textAppearance="?android:attr/textAppearanceSmall"
                              android:text="שני" android:id="@+id/textView4"
                              android:layout_gravity="center_horizontal"/>
                    <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/cbxPrefferedMonday"/>
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_margin="10dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textAppearance="?android:attr/textAppearanceSmall"
                              android:text="ראשון" android:id="@+id/textView3"
                              android:layout_gravity="center_horizontal"/>
                    <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/cbxPrefferedSunday"/>
                </LinearLayout>
            </LinearLayout>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:text="ימים בלי אוטו" android:id="@+id/txtNotPreferred"
                      android:layout_gravity="center_horizontal" android:paddingTop="20dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_margin="10dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textAppearance="?android:attr/textAppearanceSmall"
                              android:text="שישי" android:id="@+id/textView80"
                              android:layout_gravity="center_horizontal"/>
                    <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/cbxNotPrefferedFriday"/>
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_margin="10dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textAppearance="?android:attr/textAppearanceSmall"
                              android:text="חמישי" android:id="@+id/textView9"
                              android:layout_gravity="center_horizontal"/>
                    <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/cbxNotPrefferedThursday"/>
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_margin="10dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textAppearance="?android:attr/textAppearanceSmall"
                              android:text="רביעי" android:id="@+id/textView10"
                              android:layout_gravity="center_horizontal"/>
                    <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/cbxNotPrefferedWednesday"/>
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_margin="10dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textAppearance="?android:attr/textAppearanceSmall"
                              android:text="שלישי" android:id="@+id/textView11"
                              android:layout_gravity="center_horizontal"/>
                    <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/cbxNotNotPrefferedTuesday"/>
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_margin="10dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textAppearance="?android:attr/textAppearanceSmall"
                              android:text="שני" android:id="@+id/textView12"
                              android:layout_gravity="center_horizontal"/>
                    <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/cbxNotPrefferedMonday"/>
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_margin="10dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textAppearance="?android:attr/textAppearanceSmall"
                              android:text="ראשון" android:id="@+id/textView13"
                              android:layout_gravity="center_horizontal"/>
                    <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/cbxNotPrefferedSunday"/>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</merge>

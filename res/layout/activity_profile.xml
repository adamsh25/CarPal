<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       tools:context=".LoginActivity" >

    <ScrollView
            android:id="@+id/profile_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        <LinearLayout
                android:orientation="vertical" android:background="#E4E8F4" android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="השלם את הפרופיל שלך"
                    android:id="@+id/textView" android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp" android:textColor="#262261"/>
            <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
                <ImageView android:layout_width="100dp" android:layout_height="150dp"
                           android:id="@+id/imgPhoto" android:background="@drawable/adam"
                           android:layout_marginLeft="10dp"/>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="fill_parent" android:orientation="vertical"
                              android:layout_toRightOf="@+id/imgPhoto"
                              android:layout_alignParentTop="false"
                              android:layout_alignParentLeft="false" android:layout_alignParentEnd="false"
                              android:layout_alignParentStart="false"
                              android:layout_marginRight="10dp" android:layout_alignBottom="@+id/imgPhoto"
                              android:layout_centerVertical="true" android:gravity="center_vertical"
                              android:layout_marginLeft="15dp">

                    <EditText android:id="@+id/txtFirstName" android:layout_width="fill_parent"
                              android:layout_height="30dp" android:hint="שם פרטי" android:imeActionId="@+id/login"
                              android:imeActionLabel="@string/action_sign_in_short" android:imeOptions="actionUnspecified"
                              android:maxLines="1" android:singleLine="true"
                              android:enabled="false"
                              android:layout_below="@+id/txtFirstName" android:layout_toRightOf="@id/imgPhoto"
                              android:background="@drawable/textbox" android:gravity="center" android:text="מיכאל"
                              android:textColor="#FFA6A6A6"/>
                    <EditText android:id="@+id/txtLastName" android:layout_width="fill_parent"
                              android:layout_height="30dp" android:hint="שם משפחה" android:imeActionId="@+id/login"
                              android:imeActionLabel="@string/action_sign_in_short" android:imeOptions="actionUnspecified"
                              android:maxLines="1" android:singleLine="true"
                              android:enabled="false"
                              android:layout_below="@+id/txtLastName" android:layout_toRightOf="@id/imgPhoto"
                              android:background="@drawable/textbox" android:gravity="center"
                              android:layout_marginTop="5dp"/>
                    <EditText
                            android:id="@+id/txtEmail"
                            android:layout_width="fill_parent"
                            android:layout_height="30dp"
                            android:hint="מייל"
                            android:inputType="none"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:enabled="false" android:layout_below="@+id/txtLastName"
                            android:layout_toRightOf="@+id/imgPhoto" android:background="@drawable/textbox"
                            android:gravity="center" android:layout_marginTop="5dp"/>
                    <EditText android:id="@+id/txtOrganization" android:layout_width="fill_parent"
                              android:layout_height="30dp" android:hint="ארגון"
                              android:inputType="none" android:maxLines="1" android:singleLine="true"
                              android:enabled="false"
                              android:layout_below="@+id/txtEmail" android:layout_toRightOf="@id/imgPhoto"
                              android:background="@drawable/textbox" android:gravity="center"
                              android:layout_marginTop="5dp"/>
                </LinearLayout>
            </RelativeLayout>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:text="מקום מגורים" android:id="@+id/textView2"
                      android:layout_gravity="center_horizontal" android:paddingTop="20dp"
                      android:layout_marginBottom="5dp" android:textColor="#262261"/>
            <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
                <EditText
                        android:id="@+id/txtCity"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:hint="עיר"
                        android:imeActionId="@+id/login"
                        android:imeActionLabel="@string/action_sign_in_short"
                        android:imeOptions="actionUnspecified"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:layout_alignParentTop="true" android:layout_toRightOf="@+id/btnCurrentLocation"
                        android:layout_alignParentStart="false" android:background="@drawable/textbox"
                        android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp" android:gravity="center" android:textColor="#FFA6A6A6"/>
                <AutoCompleteTextView android:id="@+id/txtStreet" android:layout_width="fill_parent"
                          android:layout_height="35dp" android:hint="רחוב" android:imeActionId="@+id/login"
                          android:imeActionLabel="@string/action_sign_in_short" android:imeOptions="actionUnspecified"
                          android:maxLines="1" android:singleLine="true"
                          android:layout_below="@+id/txtCity"
                          android:background="@drawable/textbox" android:layout_alignLeft="@+id/txtCity"
                          android:layout_alignRight="@+id/txtCity" android:gravity="center"
                          android:textColor="#FFA6A6A6"/>
                <EditText
                        android:id="@+id/txtHouseNumber"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:hint="מספר בית"
                        android:inputType="none"
                        android:maxLines="1"
                        android:singleLine="true" android:layout_below="@id/txtStreet"
                        android:background="@drawable/textbox" android:layout_alignLeft="@+id/txtStreet"
                        android:layout_alignRight="@+id/txtStreet" android:layout_marginTop="5dp"
                        android:gravity="center" android:textColor="#FFA6A6A6"/>
                <Button
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/btnCurrentLocation" android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:background="@android:drawable/ic_menu_mylocation"/>
            </RelativeLayout>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:text="ימים מועדפים" android:id="@+id/txtPreferred"
                      android:layout_gravity="center_horizontal" android:paddingTop="20dp" android:textColor="#262261"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_margin="10dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textAppearance="?android:attr/textAppearanceSmall"
                              android:text="שישי" android:id="@+id/textView7"
                              android:layout_gravity="center_horizontal" android:textColor="#262261"/>
                    <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/cbxPrefferedFriday"/>
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_margin="10dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textAppearance="?android:attr/textAppearanceSmall"
                              android:text="חמישי" android:id="@+id/textView6"
                              android:layout_gravity="center_horizontal" android:textColor="#262261"/>
                    <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/cbxPrefferedThursday"/>
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_margin="10dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textAppearance="?android:attr/textAppearanceSmall"
                              android:text="רביעי" android:id="@+id/textView5"
                              android:layout_gravity="center_horizontal" android:textColor="#262261"/>
                    <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/cbxPrefferedWednesday"/>
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_margin="10dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textAppearance="?android:attr/textAppearanceSmall"
                              android:text="שלישי" android:id="@+id/textView8"
                              android:layout_gravity="center_horizontal" android:textColor="#262261"/>
                    <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/cbxPrefferedTuesday"/>
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_margin="10dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textAppearance="?android:attr/textAppearanceSmall"
                              android:text="שני" android:id="@+id/textView4"
                              android:layout_gravity="center_horizontal" android:textColor="#262261"/>
                    <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/cbxPrefferedMonday"/>
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_margin="10dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textAppearance="?android:attr/textAppearanceSmall"
                              android:text="ראשון" android:id="@+id/textView3"
                              android:layout_gravity="center_horizontal" android:textColor="#262261"/>
                    <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/cbxPrefferedSunday"/>
                </LinearLayout>
            </LinearLayout>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:text="ימים בלי אוטו" android:id="@+id/txtNotPreferred"
                      android:layout_gravity="center_horizontal" android:paddingTop="20dp" android:textColor="#262261"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_margin="10dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textAppearance="?android:attr/textAppearanceSmall"
                              android:text="שישי" android:id="@+id/textView80"
                              android:layout_gravity="center_horizontal" android:textColor="#262261"/>
                    <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/cbxNotPrefferedFriday"/>
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_margin="10dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textAppearance="?android:attr/textAppearanceSmall"
                              android:text="חמישי" android:id="@+id/textView9"
                              android:layout_gravity="center_horizontal" android:textColor="#262261"/>
                    <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/cbxNotPrefferedThursday"/>
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_margin="10dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textAppearance="?android:attr/textAppearanceSmall"
                              android:text="רביעי" android:id="@+id/textView10"
                              android:layout_gravity="center_horizontal" android:textColor="#262261"/>
                    <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/cbxNotPrefferedWednesday"/>
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_margin="10dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textAppearance="?android:attr/textAppearanceSmall"
                              android:text="שלישי" android:id="@+id/textView11"
                              android:layout_gravity="center_horizontal" android:textColor="#262261"/>
                    <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/cbxNotNotPrefferedTuesday"/>
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_margin="10dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textAppearance="?android:attr/textAppearanceSmall"
                              android:text="שני" android:id="@+id/textView12"
                              android:layout_gravity="center_horizontal" android:textColor="#262261"/>
                    <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/cbxNotPrefferedMonday"/>
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_margin="10dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textAppearance="?android:attr/textAppearanceSmall"
                              android:text="ראשון" android:id="@+id/textView13"
                              android:layout_gravity="center_horizontal" android:textColor="#262261"/>
                    <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/cbxNotPrefferedSunday"/>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</merge>
